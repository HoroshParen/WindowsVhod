<Page x:Class="WindowsVhod.Str.kk1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WindowsVhod.Str"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="kk1">

    <Grid>
        <StackPanel>
            <Label Content="Авторизуйтесь" HorizontalAlignment="Center" Margin="0 75 0 0" FontSize="25"/>
            <TextBlock Text="Введите логин" Margin="0 50 0 0" HorizontalAlignment="Center" FontSize="15"/>
            <TextBox x:Name="login"  HorizontalAlignment="Center" Margin="0 10 0 0" Width="100" Height="20"/>
            <TextBlock Text="Введите пароль" Margin="0 25 0 0" HorizontalAlignment="Center" FontSize="15"/>
            <PasswordBox x:Name="password" HorizontalAlignment="Center" Width="100" Height="20" Margin="0 10 0 0"/>
            <Button x:Name="click" Content="Авторизоваться" HorizontalAlignment="Center" Width="120" Height="25" Margin="0 20 0 0" FontSize="15" Click="click_Click"/>
        </StackPanel>
    </Grid>
</Page>
